<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zhihaofans.androidbox.view.MainActivity"
    tools:showIn="@layout/activity_main">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Button
                android:id="@+id/button_qrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_qrcode"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_androidsdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_androidsdk"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_appmanagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_appmanagement"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_newsbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_newsbox"
                android:textAllCaps="false" />

        </LinearLayout>

</android.support.constraint.ConstraintLayout>
